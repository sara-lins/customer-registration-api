datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id String @id @default(uuid())
    fullname String
    email String @unique
    password String
    role Role @default(CLIENT)
    phone String @unique
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    contacts Contact[] 
}

model Contact {
    id String @id @default(uuid())
    fullname String
    email String @unique
    phone String @unique
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    user User @relation(fields: [userId], references: [id])
    userId String
}

enum Role {
    CLIENT
    ADM
}